---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/marketing/Hero.astro';
import FeaturesDetailed from '../components/marketing/FeaturesDetailed.astro';
import BentoGrid from '../components/marketing/BentoGrid.astro';
import Community from '../components/marketing/Community.astro';
import Section from '../components/layout/Section.astro';
import AnnouncementBar from '../components/layout/AnnouncementBar.astro';
---

<BaseLayout
  title="CoClaw - OpenClaw Community & Support Platform"
  description="Comprehensive guides, troubleshooting, and tools for OpenClaw users. Install your personal AI assistant in minutes with step-by-step tutorials, video guides, and our visual configuration generator."
  keywords="OpenClaw, personal AI assistant, self-hosted AI, OpenClaw installation, OpenClaw configuration, AI assistant setup, privacy-first AI, OpenClaw troubleshooting, OpenClaw community"
>
  <!-- Schema.org structured data -->
  <script
    type="application/ld+json"
    slot="head"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@graph': [
        {
          '@type': 'Organization',
          name: 'CoClaw',
          url: 'https://coclaw.com',
          logo: 'https://coclaw.com/logo.svg',
          description:
            'Community-driven platform for OpenClaw users providing guides, troubleshooting, and tools',
          sameAs: [
            'https://github.com/openclaw/openclaw',
            'https://discord.gg/openclaw',
            'https://forum.coclaw.com',
          ],
        },
        {
          '@type': 'WebSite',
          name: 'CoClaw',
          url: 'https://coclaw.com',
          description: 'OpenClaw Community & Support Platform',
        },
        {
          '@type': 'SoftwareApplication',
          name: 'OpenClaw',
          applicationCategory: 'DeveloperApplication',
          operatingSystem: 'macOS, Linux, Windows, iOS, Android',
          offers: {
            '@type': 'Offer',
            price: '0',
            priceCurrency: 'USD',
          },
          description:
            'Self-hosted personal AI assistant that connects Claude, GPT, and local AI models to your favorite messaging apps',
          softwareVersion: 'latest',
          url: 'https://github.com/openclaw/openclaw',
          downloadUrl: 'https://github.com/openclaw/openclaw',
          installUrl: 'https://coclaw.com/getting-started',
        },
      ],
    })}
  />

  <AnnouncementBar slot="topbar" />
  <div
    class="bg-background min-h-screen overflow-x-hidden relative selection:bg-pink-500/30 selection:text-pink-950 dark:selection:text-pink-200"
  >
    <Hero />

    <FeaturesDetailed />

    <BentoGrid />

    <Community />

    <!-- Support Section -->
    <Section containerClass="text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">Support the CoClaw Community</h2>
      <p class="text-default-800 dark:text-default-600 max-w-2xl mx-auto text-lg">
        CoClaw is a community-driven platform helping thousands of users successfully deploy
        OpenClaw. We provide free guides, troubleshooting, and tools. Support us to keep the
        resources growing and the community thriving.
      </p>
      <div class="mt-8">
        <a
          href="https://github.com/openclaw/openclaw"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-content1 border border-divider hover:bg-content2 transition-colors font-semibold text-foreground"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
          Contribute on GitHub
        </a>
        <p class="text-sm text-default-600 mt-4">
          Share your knowledge, improve docs, or report issues
        </p>
      </div>
    </Section>
  </div>
</BaseLayout>
