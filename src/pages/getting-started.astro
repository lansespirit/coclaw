---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/layout/Section.astro';
import QuickInstallTabs from '../components/QuickInstallTabs.tsx';
import {
  IconApple,
  IconAws,
  IconBolt,
  IconBookOpen,
  IconChevronRight,
  IconCloud,
  IconCog,
  IconDesktop,
  IconLifebuoy,
  IconLinux,
  IconServer,
  IconWindows,
} from '../components/icons';

// SEO-optimized structured data
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'HowTo',
  name: 'How to Install OpenClaw - AI Assistant Setup Guide',
  description:
    'Complete guide to installing OpenClaw AI assistant on macOS, Linux, Windows, or cloud platforms. Get started in 5 minutes.',
  step: [
    {
      '@type': 'HowToStep',
      name: 'Choose Installation Method',
      text: 'Select between local installation (macOS, Linux, Windows) or cloud deployment (VPS, AWS, Docker)',
    },
    {
      '@type': 'HowToStep',
      name: 'Install Node.js',
      text: 'Install Node.js 22+ (Node 22 LTS recommended)',
    },
    {
      '@type': 'HowToStep',
      name: 'Install OpenClaw',
      text: 'Run npm install -g openclaw@latest (or pnpm add -g openclaw@latest)',
    },
    {
      '@type': 'HowToStep',
      name: 'Run the Setup Wizard',
      text: 'Run openclaw onboard (recommended: openclaw onboard --install-daemon)',
    },
    {
      '@type': 'HowToStep',
      name: 'Open the Dashboard',
      text: 'Open http://127.0.0.1:18789/ or run openclaw dashboard',
    },
  ],
};

const breadcrumbData = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    { '@type': 'ListItem', position: 1, name: 'Home', item: 'https://coclaw.com/' },
    { '@type': 'ListItem', position: 2, name: 'Getting Started', item: canonicalURL.toString() },
  ],
};
---

<BaseLayout
  title="OpenClaw Installation Guide - Install AI Assistant on macOS, Linux, Windows & Cloud"
  description="Complete OpenClaw installation guide for all platforms. Install on macOS, Linux, Windows, Docker, VPS, AWS, and more. Get your AI assistant running in 5 minutes with step-by-step instructions."
  keywords="OpenClaw installation, install OpenClaw, OpenClaw setup guide, OpenClaw macOS install, OpenClaw Linux installation, OpenClaw Windows setup, OpenClaw Docker, OpenClaw VPS deployment, OpenClaw AWS, AI assistant installation, OpenClaw tutorial, OpenClaw quick start"
>
  <script type="application/ld+json" slot="head" set:html={JSON.stringify(structuredData)} />
  <script type="application/ld+json" slot="head" set:html={JSON.stringify(breadcrumbData)} />

  <div
    class="bg-background min-h-screen overflow-x-hidden relative selection:bg-pink-500/30 selection:text-pink-950 dark:selection:text-pink-200"
  >
    <!-- Hero Section -->
    <Section containerClass="text-center pt-24 pb-8">
      <h1
        class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-br from-foreground to-foreground/70 bg-clip-text text-transparent"
      >
        Getting Started with OpenClaw
      </h1>
      <p class="text-xl text-default-800 dark:text-default-600 max-w-3xl mx-auto">
        Choose your installation path and get your personal AI assistant running in minutes
      </p>
    </Section>

    <!-- Quick Installation Guide -->
    <Section containerClass="pt-8 pb-12">
      <div class="max-w-5xl mx-auto">
        <div class="mb-8 text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            How to Install OpenClaw: Quick Setup Guide
          </h2>
          <p class="text-lg text-default-700 dark:text-default-500">
            Install OpenClaw AI assistant in 5 minutes on macOS, Linux, Windows, or Docker
          </p>
        </div>

        <QuickInstallTabs client:load />
      </div>
    </Section>

    <!-- Installation Path Selector -->
    <Section>
      <div class="mb-12 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Choose Your OpenClaw Installation Method
        </h2>
        <p class="text-lg text-default-700 dark:text-default-500 max-w-3xl mx-auto">
          Select the best installation option for your needs: local setup for privacy or cloud
          deployment for 24/7 availability
        </p>
      </div>
      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <!-- Local Installation Card -->
        <div
          class="group relative overflow-hidden rounded-2xl border-2 border-divider bg-content1 p-8 hover:border-primary/50 transition-all duration-300 hover:shadow-xl hover:shadow-primary/10"
        >
          <div class="mb-6">
            <div
              class="w-16 h-16 rounded-2xl bg-gradient-to-br from-blue-500 to-cyan-600 flex items-center justify-center mb-4"
            >
              <IconDesktop className="w-8 h-8 text-white" aria-hidden="true" />
            </div>
            <h3 class="text-3xl font-bold mb-3 group-hover:text-primary transition-colors">
              Install OpenClaw Locally
            </h3>
            <p class="text-default-700 dark:text-default-500 text-lg mb-6">
              Install OpenClaw on your personal device for maximum privacy and control
            </p>
          </div>

          <div class="space-y-3">
            <a
              href="/getting-started/macos"
              class="flex items-center justify-between p-4 rounded-xl bg-content2/50 hover:bg-content2 border border-divider hover:border-primary/30 transition-all group/link"
            >
              <div class="flex items-center gap-3">
                <div
                  class="w-10 h-10 rounded-lg bg-gradient-to-br from-gray-700 to-gray-900 flex items-center justify-center"
                >
                  <IconApple className="w-5 h-5 text-white" aria-hidden="true" />
                </div>
                <div>
                  <div class="font-semibold text-foreground">macOS</div>
                  <div class="text-sm text-default-600">macOS 12+ (Intel & Apple Silicon)</div>
                </div>
              </div>
              <IconChevronRight
                className="w-5 h-5 text-default-500 group-hover/link:text-primary group-hover/link:translate-x-1 transition-all"
                aria-hidden="true"
              />
            </a>

            <a
              href="/getting-started/linux"
              class="flex items-center justify-between p-4 rounded-xl bg-content2/50 hover:bg-content2 border border-divider hover:border-primary/30 transition-all group/link"
            >
              <div class="flex items-center gap-3">
                <div
                  class="w-10 h-10 rounded-lg bg-gradient-to-br from-orange-500 to-red-600 flex items-center justify-center"
                >
                  <IconLinux className="w-5 h-5 text-white" aria-hidden="true" />
                </div>
                <div>
                  <div class="font-semibold text-foreground">Linux</div>
                  <div class="text-sm text-default-600">Ubuntu, Debian, Fedora, Arch</div>
                </div>
              </div>
              <IconChevronRight
                className="w-5 h-5 text-default-500 group-hover/link:text-primary group-hover/link:translate-x-1 transition-all"
                aria-hidden="true"
              />
            </a>

            <a
              href="/getting-started/windows"
              class="flex items-center justify-between p-4 rounded-xl bg-content2/50 hover:bg-content2 border border-divider hover:border-primary/30 transition-all group/link"
            >
              <div class="flex items-center gap-3">
                <div
                  class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center"
                >
                  <IconWindows className="w-5 h-5 text-white" aria-hidden="true" />
                </div>
                <div>
                  <div class="font-semibold text-foreground">Windows</div>
                  <div class="text-sm text-default-600">Windows 10/11 (WSL2 recommended)</div>
                </div>
              </div>
              <IconChevronRight
                className="w-5 h-5 text-default-500 group-hover/link:text-primary group-hover/link:translate-x-1 transition-all"
                aria-hidden="true"
              />
            </a>
          </div>
        </div>

        <!-- Cloud Installation Card -->
        <div
          class="group relative overflow-hidden rounded-2xl border-2 border-divider bg-content1 p-8 hover:border-primary/50 transition-all duration-300 hover:shadow-xl hover:shadow-primary/10"
        >
          <div class="mb-6">
            <div
              class="w-16 h-16 rounded-2xl bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center mb-4"
            >
              <IconCloud className="w-8 h-8 text-white" aria-hidden="true" />
            </div>
            <h3 class="text-3xl font-bold mb-3 group-hover:text-primary transition-colors">
              Deploy OpenClaw to Cloud
            </h3>
            <p class="text-default-700 dark:text-default-500 text-lg mb-6">
              Deploy OpenClaw on VPS, AWS, or Docker for 24/7 availability
            </p>
          </div>

          <div class="space-y-3">
            <a
              href="/getting-started/vps"
              class="flex items-center justify-between p-4 rounded-xl bg-content2/50 hover:bg-content2 border border-divider hover:border-primary/30 transition-all group/link"
            >
              <div class="flex items-center gap-3">
                <div
                  class="w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center"
                >
                  <IconServer className="w-5 h-5 text-white" aria-hidden="true" />
                </div>
                <div>
                  <div class="font-semibold text-foreground">VPS Setup</div>
                  <div class="text-sm text-default-600">DigitalOcean, Hetzner, Vultr</div>
                </div>
              </div>
              <IconChevronRight
                className="w-5 h-5 text-default-500 group-hover/link:text-primary group-hover/link:translate-x-1 transition-all"
                aria-hidden="true"
              />
            </a>

            <a
              href="/getting-started/aws"
              class="flex items-center justify-between p-4 rounded-xl bg-content2/50 hover:bg-content2 border border-divider hover:border-primary/30 transition-all group/link"
            >
              <div class="flex items-center gap-3">
                <div
                  class="w-10 h-10 rounded-lg bg-gradient-to-br from-orange-400 to-orange-600 flex items-center justify-center"
                >
                  <IconAws className="w-5 h-5 text-white" aria-hidden="true" />
                </div>
                <div>
                  <div class="font-semibold text-foreground">AWS</div>
                  <div class="text-sm text-default-600">EC2, Lightsail, ECS</div>
                </div>
              </div>
              <IconChevronRight
                className="w-5 h-5 text-default-500 group-hover/link:text-primary group-hover/link:translate-x-1 transition-all"
                aria-hidden="true"
              />
            </a>

            <a
              href="/getting-started/cloud-providers"
              class="flex items-center justify-between p-4 rounded-xl bg-content2/50 hover:bg-content2 border border-divider hover:border-primary/30 transition-all group/link"
            >
              <div class="flex items-center gap-3">
                <div
                  class="w-10 h-10 rounded-lg bg-gradient-to-br from-cyan-500 to-blue-600 flex items-center justify-center"
                >
                  <IconCloud className="w-5 h-5 text-white" aria-hidden="true" />
                </div>
                <div>
                  <div class="font-semibold text-foreground">Other Providers</div>
                  <div class="text-sm text-default-600">Railway, Zeabur, Fly.io, GCP</div>
                </div>
              </div>
              <IconChevronRight
                className="w-5 h-5 text-default-500 group-hover/link:text-primary group-hover/link:translate-x-1 transition-all"
                aria-hidden="true"
              />
            </a>
          </div>
        </div>
      </div>
    </Section>

    <!-- Quick Start Section -->
    <Section containerClass="mt-16">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">OpenClaw Quick Start Tutorial</h2>
          <p class="text-lg text-default-700 dark:text-default-500">
            Advanced setup guide for experienced developers - get your AI assistant configured in 5
            minutes
          </p>
        </div>

        <div class="rounded-2xl border border-divider bg-content1 p-8">
          <div class="flex items-start gap-6">
            <div class="flex-shrink-0">
              <div
                class="w-12 h-12 rounded-xl bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center"
              >
                <IconBolt className="w-6 h-6 text-white" aria-hidden="true" />
              </div>
            </div>
            <div class="flex-1">
              <h3 class="text-2xl font-bold mb-3">Fast-Track Installation Guide</h3>
              <p class="text-default-700 dark:text-default-500 mb-6">
                Skip the detailed instructions and get OpenClaw running with your first messaging
                channel configured. Ideal for developers familiar with Node.js and command-line
                tools.
              </p>
              <a
                href="/getting-started/quick-start"
                class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-primary text-primary-foreground hover:bg-primary/90 transition-colors font-semibold"
              >
                <span>View Quick Start Guide</span>
                <IconChevronRight className="w-5 h-5" aria-hidden="true" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </Section>

    <!-- Next Steps Section -->
    <Section containerClass="mt-16 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Post-Installation Setup & Configuration</h2>
      <p class="text-default-800 dark:text-default-600 max-w-2xl mx-auto text-lg mb-8">
        After installing OpenClaw, configure your AI assistant with these essential tools and
        resources
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="/tools/config-generator"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-content1 border border-divider hover:bg-content2 transition-colors font-semibold"
        >
          <IconCog className="w-5 h-5" aria-hidden="true" />
          Configuration Generator
        </a>
        <a
          href="/resources"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-content1 border border-divider hover:bg-content2 transition-colors font-semibold"
        >
          <IconBookOpen className="w-5 h-5" aria-hidden="true" />
          Browse Guides
        </a>
        <a
          href="/troubleshooting"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-content1 border border-divider hover:bg-content2 transition-colors font-semibold"
        >
          <IconLifebuoy className="w-5 h-5" aria-hidden="true" />
          Troubleshooting
        </a>
      </div>
    </Section>
  </div>
</BaseLayout>
