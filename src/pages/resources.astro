---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/layout/Section.astro';
import { BlogCard } from '../components/BlogCard';
import { GuideCard } from '../components/GuideCard';
import { FAQAccordion } from '../components/FAQAccordion';
import { UserStoryCard } from '../components/UserStoryCard';
import { VideoGallery } from '../components/VideoGallery';
import { ResourceSearchInput } from '../components/ResourceSearchInput';
import { Button, Chip } from '@heroui/react';
import {
  IconChevronRight,
  IconEmojiHappy,
  IconPlaySolid,
  IconQuestionMarkCircle,
  IconUserGroup,
} from '../components/icons';

const blogEntries = await getCollection('blog', ({ data }) => !data.draft);
const blogEntriesSorted = [...blogEntries].sort(
  (a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime()
);
const featuredBlogEntry =
  blogEntries
    .filter((e) => e.data.featured)
    .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())[0] ??
  blogEntriesSorted[0];

const featuredBlog = featuredBlogEntry
  ? {
      title: featuredBlogEntry.data.title,
      excerpt: featuredBlogEntry.data.description,
      category: featuredBlogEntry.data.category,
      href: `/blog/${featuredBlogEntry.slug}`,
      image: featuredBlogEntry.data.ogImage || '/images/og/og-main.png',
    }
  : null;

const blogPosts = blogEntries
  .filter((e) => !e.data.featured)
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 6)
  .map((entry) => ({
    title: entry.data.title,
    excerpt: entry.data.description,
    author: entry.data.author,
    keywords: entry.data.keywords,
    category: entry.data.category,
    href: `/blog/${entry.slug}`,
  }));

const guideEntries = await getCollection('guides', ({ data }) => !data.draft);
const guides = guideEntries
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .map((entry) => ({
    title: entry.data.title,
    description: entry.data.description,
    difficulty: entry.data.difficulty,
    platforms: entry.data.platforms,
    time: entry.data.time,
    href: `/guides/${entry.slug}`,
  }));

const videos: { videoId: string; title: string; category: string; duration: string }[] = [
  {
    videoId: 'a63dUwXUgDo',
    title: 'ClawdBot Full Tutorial for Beginners: How to Use & Set up ClawdBot (Openclaw)',
    category: 'Beginner',
    duration: '14:53',
  },
  {
    videoId: '4evf5YqVzOM',
    title: 'Master OpenClaw/Clawdbot in 35 minutes',
    category: 'Crash Course',
    duration: '35:26',
  },
  {
    videoId: 'V6Mp0fUh-OM',
    title: 'Run AI CoWork Locally with OpenClaw & Ollama (Complete Setup)',
    category: 'Local Setup',
    duration: '5:46',
  },
  {
    videoId: 'qePhufA1hSE',
    title: "I use Clawdbot (OpenClaw) on a Raspberry Pi - it's Crazy Good!",
    category: 'Hardware',
    duration: '16:53',
  },
  {
    videoId: 'QW-PFjF2aEo',
    title: 'The Most INSANE Use Cases for OpenClaw x MiniMax (How To Use OpenClaw Like a Pro)',
    category: 'Use Cases',
    duration: '16:25',
  },
  {
    videoId: 'ExzAiMjT6jg',
    title: 'How to SAFELY Run OpenClaw with Kimi-K2.5 & LOCAL AI (Clawdbot)',
    category: 'Safety',
    duration: '12:59',
  },
  {
    videoId: 'ssYt09bCgUY',
    title: 'The wild rise of OpenClaw...',
    category: 'Story',
    duration: '5:19',
  },
  {
    videoId: 'AcwK1Uuwc0U',
    title: "How OpenClaw's Creator Uses AI to Run His Life in 40 Minutes | Peter Steinberger",
    category: 'Interview',
    duration: '37:44',
  },
];

const quickSetupVideo = videos.find((v) => v.videoId === 'V6Mp0fUh-OM') ?? videos[0];

// Mock data for FAQs
const faqs = [
  {
    question: 'What are the system requirements for OpenClaw?',
    answer:
      'OpenClaw requires a modern Node.js runtime (Node 22+ recommended) and runs on macOS, Linux, and Windows.',
  },
  {
    question: 'How much does it cost to run OpenClaw?',
    answer:
      'OpenClaw itself is free and open-source. You only pay for the AI API usage (Anthropic, OpenAI, etc.).',
  },
  {
    question: 'Can I use OpenClaw with multiple messaging platforms?',
    answer:
      'Absolutely! OpenClaw supports WhatsApp, Telegram, Slack, Discord, Signal, iMessage, and more.',
  },
  {
    question: 'How do I upgrade to the latest version?',
    answer:
      'Just run `npm install -g openclaw@latest` in your terminal. All your configurations will be preserved automatically.',
  },
  {
    question: 'Does it support self-hosted LLMs like Llama 3?',
    answer:
      'Yes. You can use local models via Ollama to reduce or avoid API costs (hardware permitting).',
  },
  {
    question: 'Can I custom the bot response behavior?',
    answer:
      'Absolutely. You can define system prompts, personality traits, and custom tools in the JSON configuration files.',
  },
  {
    question: 'Is there a mobile app for administration?',
    answer:
      "While we don't have a native app yet, the web interface is fully responsive and can be added to your home screen.",
  },
];

const storyEntries = await getCollection('stories', ({ data }) => !data.draft);
const userStories = storyEntries
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .map((entry) => ({
    name: entry.data.name,
    role: entry.data.role,
    quote: entry.data.quote,
    avatar: entry.data.image,
    href: `/stories/${entry.slug}`,
  }));
---

<BaseLayout
  title="OpenClaw Resources Hub | CoClaw"
  description="Curated OpenClaw guides, tutorials, FAQs, and community resources. Start here to install, configure channels, and troubleshoot."
  keywords="OpenClaw resources, OpenClaw guides, OpenClaw tutorials, OpenClaw help, OpenClaw community, install OpenClaw"
>
  <script
    type="application/ld+json"
    slot="head"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'FAQPage',
      mainEntity: faqs.map((f) => ({
        '@type': 'Question',
        name: f.question,
        acceptedAnswer: { '@type': 'Answer', text: f.answer },
      })),
    })}
  />
  <div class="bg-background min-h-screen relative">
    <!-- Decorative Background Elements -->
    <div
      class="absolute top-0 left-1/4 w-[500px] h-[500px] bg-secondary/10 rounded-full blur-[120px] -z-10 animate-pulse"
    >
    </div>
    <div
      class="absolute top-1/3 right-1/4 w-[400px] h-[400px] bg-primary/10 rounded-full blur-[100px] -z-10 animate-float-slow"
    >
    </div>

    <!-- Hero Section -->
    <Section py="pt-32 pb-16" containerClass="text-center relative">
      <div class="max-w-4xl mx-auto">
        <div
          class="inline-flex items-center gap-2 px-3 py-1 mb-6 text-xs font-semibold rounded-full bg-primary/10 text-primary border border-primary/20 backdrop-blur-md"
        >
          <span class="flex h-2 w-2 rounded-full bg-primary animate-ping"></span>
          NEW RESOURCE UPDATED
        </div>
        <h1 class="text-5xl md:text-7xl font-extrabold mb-8 tracking-tight text-gradient">
          Master Your AI Workflow
        </h1>
        <p
          class="text-xl text-default-800 dark:text-default-600 mb-12 max-w-2xl mx-auto leading-relaxed"
        >
          The central hub for all OpenClaw documentation, guides, and community-driven tutorials.
        </p>

        <!-- Search Pill -->
        <div class="max-w-xl mx-auto relative group">
          <ResourceSearchInput client:load />
          <div
            class="absolute inset-0 -z-10 bg-gradient-to-r from-primary/20 to-secondary/20 blur-xl opacity-0 group-focus-within:opacity-100 transition-opacity rounded-full"
          >
          </div>
        </div>
      </div>
    </Section>

    <!-- Featured Bento Section -->
    <Section py="py-12">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 h-full">
        <!-- Large Featured Card -->
        <div class="lg:col-span-8 flex flex-col">
          <div
            class="m-card-glass p-8 h-full flex flex-col justify-end min-h-[400px] relative overflow-hidden group"
          >
            <div
              class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent z-10"
            >
            </div>
            {
              featuredBlog && (
                <>
                  <a
                    href={featuredBlog.href}
                    class="absolute inset-0 z-20"
                    aria-label="Featured blog"
                  />
                  <img
                    src={featuredBlog.image}
                    alt={featuredBlog.title}
                    class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-1000"
                  />
                </>
              )
            }
            <div class="relative z-20">
              <Chip color="primary" variant="shadow" size="sm" className="mb-4">
                FEATURED BLOG
              </Chip>
              <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 leading-tight">
                {featuredBlog?.title}
              </h2>
              <p class="text-white/80 text-lg mb-6 max-w-xl">
                {featuredBlog?.excerpt}
              </p>
              <Button
                color="default"
                radius="full"
                variant="solid"
                className="font-bold bg-white text-black border-none"
                as="a"
                href={featuredBlog?.href}
              >
                Read Article
              </Button>
            </div>
          </div>
        </div>

        <!-- Side Cards Column -->
        <div class="lg:col-span-4 flex flex-col gap-6 text-foreground">
          <!-- Video Mini Card -->
          <a
            class="m-card-surface p-6 flex-1 flex flex-col justify-between group relative overflow-hidden"
            href={`https://www.youtube.com/watch?v=${quickSetupVideo.videoId}`}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`Watch video: ${quickSetupVideo.title}`}
          >
            <div
              class="absolute -top-12 -right-12 w-32 h-32 bg-primary/5 rounded-full blur-2xl group-hover:bg-primary/20 transition-all"
            >
            </div>
            <div class="relative z-10">
              <div
                class="w-10 h-10 rounded-full bg-danger/10 flex items-center justify-center text-danger mb-4"
              >
                <IconPlaySolid className="w-5 h-5" aria-hidden="true" />
              </div>
              <h3 class="text-xl font-bold mb-2">Start Here: Local Setup</h3>
              <p class="text-sm text-default-600 dark:text-default-500">
                Complete Ollama setup in {quickSetupVideo.duration}.
              </p>
            </div>
            <span
              class="text-primary text-sm font-semibold mt-4 inline-flex items-center gap-1 group-hover:gap-2 transition-all"
            >
              Watch Now <IconChevronRight className="w-4 h-4" aria-hidden="true" />
            </span>
          </a>

          <!-- Community Card -->
          <a
            class="m-card-surface p-6 flex-1 flex flex-col justify-between group relative overflow-hidden"
            href="https://discord.gg/clawd"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Join the Discord community"
          >
            <div
              class="absolute -bottom-12 -left-12 w-32 h-32 bg-primary/5 rounded-full blur-2xl group-hover:bg-primary/20 transition-all"
            >
            </div>
            <div class="relative z-10">
              <div
                class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary mb-4"
              >
                <IconUserGroup className="w-5 h-5" aria-hidden="true" />
              </div>
              <h3 class="text-xl font-bold mb-2">Join the Community</h3>
              <p class="text-sm text-default-600 dark:text-default-500">
                Share your setup and learn from 50k+ active users.
              </p>
            </div>
            <span
              class="text-primary text-sm font-semibold mt-4 inline-flex items-center gap-1 group-hover:gap-2 transition-all"
            >
              Join Discord <IconChevronRight className="w-4 h-4" aria-hidden="true" />
            </span>
          </a>
        </div>
      </div>
    </Section>

    <!-- Main Content Sections -->
    <Section py="py-20">
      <!-- Blog & Articles Section -->
      <div class="mb-24">
        <div class="flex items-end justify-between mb-12">
          <div>
            <h2 class="text-4xl font-bold mb-3">Blog & Insights</h2>
            <p class="text-lg text-default-600 dark:text-default-500">
              Expert advice on AI automation and self-hosting.
            </p>
          </div>
          <a
            href="/blog"
            class="hidden md:flex items-center gap-2 text-primary font-bold hover:gap-3 transition-all underline underline-offset-4"
          >
            View All Posts
          </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {blogPosts.map((post) => <BlogCard {...post} client:load />)}
        </div>
      </div>

      <!-- Guides & Tutorials Section -->
      <div>
        <div class="flex items-end justify-between mb-12">
          <div>
            <h2 class="text-4xl font-bold mb-3">Technical Guides</h2>
            <p class="text-lg text-default-600 dark:text-default-500">
              Deep dives into configuration and integrations.
            </p>
          </div>
          <a
            href="/guides"
            class="hidden md:flex items-center gap-2 text-primary font-bold hover:gap-3 transition-all underline underline-offset-4"
          >
            Browse Full Library
          </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {guides.map((guide) => <GuideCard {...guide} client:load />)}
        </div>
      </div>
    </Section>

    <!-- Video Tutorials Section -->
    <Section py="py-24" class="bg-content1/20 border-y border-divider/50 overflow-hidden">
      {
        videos.length > 0 ? (
          <>
            <div id="video-library" class="sr-only" aria-hidden="true" />
            <VideoGallery videos={videos} client:load />
          </>
        ) : (
          <div class="site-container">
            <div class="max-w-4xl mx-auto text-center">
              <h2 class="text-4xl font-bold mb-4">Video Library</h2>
              <p class="text-lg text-default-600 dark:text-default-500 mb-8">
                Coming soon. We only list curated, verified walkthroughs to avoid outdated or unsafe
                instructions.
              </p>
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                  class="inline-flex items-center justify-center rounded-full bg-primary text-primary-foreground px-6 py-3 font-semibold"
                  href="/getting-started"
                >
                  Install OpenClaw
                </a>
                <a
                  class="inline-flex items-center justify-center rounded-full border border-divider bg-content1 px-6 py-3 font-semibold text-foreground"
                  href="https://forum.coclaw.com"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  Request a Video Topic
                </a>
              </div>
            </div>
          </div>
        )
      }
    </Section>

    <!-- Redesigned Support & Stories Section -->
    <Section py="py-24">
      <div class="flex flex-col lg:flex-row gap-20">
        <!-- FAQs (Sticky Sidebar Style) -->
        <div class="lg:w-1/2">
          <div class="mb-12">
            <div
              class="w-12 h-12 rounded-2xl bg-primary/10 flex items-center justify-center text-primary mb-6"
            >
              <IconQuestionMarkCircle className="w-6 h-6" aria-hidden="true" />
            </div>
            <h2 class="text-4xl md:text-5xl font-black tracking-tight mb-4">FAQ</h2>
            <p class="text-xl text-default-600 dark:text-default-500">
              Quick answers to the most common questions.
            </p>
          </div>

          <FAQAccordion faqs={faqs} client:load />

          <div class="mt-12 p-8 rounded-3xl bg-primary/5 border border-primary/10">
            <h4 class="text-lg font-bold mb-2">Can't find your answer?</h4>
            <p class="text-default-600 mb-6">
              Browse our troubleshooting hub and community threads for known fixes.
            </p>
            <Button
              as="a"
              href="/troubleshooting"
              color="primary"
              variant="flat"
              radius="full"
              className="font-bold"
            >
              Open Troubleshooting Hub
            </Button>
          </div>
        </div>

        <!-- User Stories (Feature Wall) -->
        <div class="lg:w-1/2">
          <div class="mb-12">
            <div
              class="w-12 h-12 rounded-2xl bg-secondary/10 flex items-center justify-center text-secondary mb-6"
            >
              <IconEmojiHappy className="w-6 h-6" aria-hidden="true" />
            </div>
            <h2 class="text-4xl md:text-5xl font-black tracking-tight mb-4">User Stories</h2>
            <p class="text-xl text-default-600 dark:text-default-500">
              Join 50,000+ happy users globally.
            </p>
          </div>
          <div class="grid grid-cols-1 gap-6">
            {userStories.map((story) => <UserStoryCard {...story} client:load />)}
          </div>

          <div class="mt-8 text-center lg:text-left">
            <a
              href="/stories"
              class="text-primary font-bold inline-flex items-center gap-2 hover:gap-3 transition-all"
            >
              Read all successful stories <IconChevronRight
                className="w-4 h-4"
                aria-hidden="true"
              />
            </a>
          </div>
        </div>
      </div>
    </Section>

    <!-- CTA Section -->
    <Section
      containerClass="text-center py-20 bg-gradient-to-tr from-primary/10 via-background to-secondary/10 rounded-[48px] border border-divider/50 shadow-2xl mb-24 relative overflow-hidden"
      py="py-0"
    >
      <div class="absolute inset-0 bg-grid-white/5 mask-image-gradient-b"></div>
      <div class="relative z-10">
        <h2 class="text-4xl md:text-6xl font-black mb-8 tracking-tighter">Still have questions?</h2>
        <p class="text-xl text-default-800 dark:text-default-600 max-w-2xl mx-auto mb-12">
          Our community of developers and power users is here to help. Join our Slack or forum for
          real-time support.
        </p>
        <div class="flex flex-wrap justify-center gap-6">
          <Button
            size="lg"
            radius="full"
            color="primary"
            className="font-bold px-10 shadow-xl shadow-primary/20 h-14"
          >
            Visit Community Forum
          </Button>
          <Button
            size="lg"
            radius="full"
            variant="bordered"
            className="font-bold px-10 h-14 border-2"
          >
            Chat on Discord
          </Button>
        </div>
      </div>
    </Section>
  </div>
</BaseLayout>

<style>
  .animate-float-slow {
    animation: float 10s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-30px);
    }
  }
</style>
