---
import { Button } from '@heroui/react';
import Section from '../layout/Section.astro';
import HeroFeatureCards from './HeroFeatureCards.astro';
import HeroBackground from './backgrounds/HeroBackground.astro';
import { IconArrowRight, IconArrowUpRight, IconCopy, IconMoon, IconSun, IconXMark } from '../icons';

interface Props {
  badge?: string;
  badgeUrl?: string;
}

const { badge = 'Open Source ‚Ä¢ GitHub', badgeUrl = 'https://github.com/openclaw/openclaw' } =
  Astro.props;
---

<Section py="py-20 lg:py-32" class="z-10 overflow-visible" containerClass="overflow-visible">
  <div class="flex flex-col lg:flex-row items-center justify-between gap-12 overflow-visible">
    <!-- Content Column (Left) -->
    <div class="flex-1 text-left z-20 max-w-2xl">
      <!-- Version Badge -->
      {
        badge && (
          <a
            href={badgeUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-3 py-1 mb-6 text-xs font-medium transition-colors border rounded-full text-default-800 dark:text-default-600 hover:text-foreground border-default-200/50 hover:bg-default-100/10 backdrop-blur-md group"
          >
            <span class="text-orange-500 group-hover:animate-pulse">‚≠ê</span>
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-500">
              {badge}
            </span>
            <IconArrowUpRight
              className="w-3 h-3 opacity-60 group-hover:translate-x-0.5 transition-transform"
              aria-hidden="true"
            />
          </a>
        )
      }

      <!-- Main Heading -->
      <h1 class="text-5xl font-extrabold tracking-tight md:text-7xl mb-6 leading-[1.1]">
        Your Personal <span class="text-pink-600">AI Assistant</span>, <br />
        Running on Your Terms
      </h1>

      <!-- Subheading -->
      <p
        class="text-lg text-default-800 dark:text-default-600 md:text-xl leading-relaxed mb-8 max-w-xl"
      >
        OpenClaw connects Claude, GPT, and local AI models to your favorite messaging apps‚ÄîWhatsApp,
        Telegram, Discord, and more. Self-hosted, privacy-first, and incredibly powerful.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 items-start sm:items-center">
        <Button
          as="a"
          href="/getting-started"
          color="primary"
          radius="full"
          size="lg"
          className="font-semibold px-8 shadow-lg shadow-primary/20"
          client:visible
        >
          Get Started
          <IconArrowRight className="w-4 h-4 ml-1" aria-hidden="true" />
        </Button>

        <div
          class="m-card-glass-soft flex items-center gap-2 px-4 py-3 text-sm font-mono text-default-800 dark:text-default-600"
        >
          <span class="text-default-900 dark:text-default-700 select-none">$</span>
          <span class="text-default-800 dark:text-default-600">npm install -g openclaw@latest</span>
          <button
            class="ml-4 hover:text-foreground transition-colors group"
            aria-label="Copy command"
            onclick="navigator.clipboard.writeText('npm install -g openclaw@latest')"
          >
            <IconCopy
              className="w-4 h-4 group-hover:scale-110 transition-transform"
              aria-hidden="true"
            />
          </button>
        </div>
      </div>
    </div>

    <!-- Visual Column (Right) -->
    <div class="flex-1 w-full relative h-[650px] hidden lg:block perspective-[1200px]">
      <!-- Floating Element 1: Top Right Camera Card & Toggle -->
      <div class="absolute top-0 right-12 animate-float-slow z-30">
        <div class="m-card-glass w-[210px] rounded-[10px] p-3 border-default-200/50">
          <div
            class="h-40 rounded-[8px] bg-gradient-to-b from-cyan-400 to-blue-600 relative overflow-hidden mb-3 group cursor-pointer shadow-inner"
          >
            <img
              src="/images/features/hero-chat.png"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
            />
            <div
              class="absolute bottom-2 left-2 bg-black/40 backdrop-blur-md border border-white/20 rounded-full px-3 py-1 text-[10px] font-semibold text-white shadow-lg"
            >
              AI Assistant
            </div>
          </div>
          <div class="flex justify-between items-center px-2 pb-1">
            <div class="flex gap-1.5">
              <span class="w-2.5 h-2.5 rounded-full bg-default-200/50"></span>
              <span class="w-2.5 h-2.5 rounded-full bg-default-200/50"></span>
            </div>
            <div class="w-10 h-5 bg-blue-500 rounded-full shadow-lg shadow-blue-500/20"></div>
          </div>
        </div>

        <!-- Toggle Switch attached with Sun/Moon icons -->
        <div
          class="absolute -top-4 -right-16 m-pill-glass m-shadow-float p-1.5 flex items-center animate-float-delayed"
        >
          <div
            class="w-[72px] h-9 bg-blue-600 rounded-full flex items-center px-1.5 relative gap-3"
          >
            <IconMoon className="w-4 h-4 text-white/40" aria-hidden="true" />
            <div
              class="w-7 h-7 bg-white rounded-full shadow-md flex items-center justify-center translate-x-1"
            >
              <IconSun className="w-4 h-4 text-blue-600" aria-hidden="true" />
            </div>
          </div>
        </div>
      </div>

      <!-- Floating Element 2: Middle Cluster (Notes & User Card) -->
      <div
        class="absolute top-[120px] left-0 md:left-6 z-20 flex flex-col items-start animate-float-mid translate-x-4"
      >
        <!-- Notes/Tasks Pill -->
        <div
          class="bg-black/40 backdrop-blur-xl border border-white/10 rounded-full p-1 flex text-[11px] font-semibold text-default-700 dark:text-default-600 mb-4 ml-12"
        >
          <span class="bg-white/10 text-white rounded-full px-4 py-1.5 shadow-sm">Notes</span>
          <span class="px-4 py-1.5 cursor-pointer hover:text-white transition-colors">Tasks</span>
          <span class="px-4 py-1.5 cursor-pointer hover:text-white transition-colors">Files</span>
        </div>

        <!-- User Card -->
        <div class="m-card-glass p-5 rounded-[10px] w-[280px] border-default-200/50">
          <div class="flex items-start justify-between mb-4">
            <div class="flex gap-4">
              <div
                class="w-12 h-12 rounded-full p-[2.5px] bg-gradient-to-tr from-yellow-400 via-pink-500 to-purple-600 shadow-lg shadow-pink-500/20"
              >
                <div
                  class="w-full h-full rounded-full border-2 border-black overflow-hidden bg-black"
                >
                  <img
                    src="https://heroui.com/avatars/avatar-1.png"
                    alt="Zoey"
                    class="w-full h-full object-cover"
                  />
                </div>
              </div>
              <div>
                <h3 class="font-bold text-foreground text-[14px] leading-tight mt-0.5">
                  Alex Chen
                </h3>
                <p class="text-default-800 dark:text-default-600 text-[12px]">@alexchen</p>
              </div>
            </div>
            <Button
              color="primary"
              size="sm"
              radius="full"
              className="h-8 text-[12px] px-4 font-bold bg-blue-600 text-white shadow-lg shadow-blue-500/20"
              client:visible>Follow</Button
            >
          </div>
          <p class="text-default-800 dark:text-default-600 text-[13px] leading-relaxed mb-5">
            Running OpenClaw on Mac Mini ‚Ä¢ 5 channels connected <span class="whitespace-nowrap"
              >ü¶û</span
            >
          </p>
          <div class="flex gap-4 text-[12px] font-medium pt-4 border-t border-default-200/20">
            <div class="text-foreground">
              4 <span class="text-default-800 dark:text-default-600 font-normal">Following</span>
            </div>
            <div class="text-foreground">
              97.1K <span class="text-default-800 dark:text-default-600 font-normal">Followers</span
              >
            </div>
          </div>
        </div>
      </div>

      <!-- Floating Element 3: Pagination & Input Field -->
      <div
        class="absolute top-[260px] right-4 md:right-16 z-20 animate-float-delayed flex flex-col gap-6 items-end"
      >
        <!-- Pagination -->
        <div
          class="bg-black/40 backdrop-blur-xl text-default-700 dark:text-default-600 text-[12px] py-1.5 px-4 rounded-full border border-white/10 flex items-center gap-4 shadow-xl"
        >
          <span class="hover:text-white cursor-pointer">&lt;</span>
          <span class="cursor-pointer hover:text-white">1</span>
          <span class="text-default-600 dark:text-default-500">...</span>
          <span class="cursor-pointer hover:text-white">5</span>
          <span
            class="bg-blue-600 text-white min-w-[28px] h-7 flex items-center justify-center rounded-full font-bold shadow-lg shadow-blue-500/20"
            >6</span
          >
          <span class="cursor-pointer hover:text-white">7</span>
          <span class="text-default-600 dark:text-default-500">...</span>
          <span class="cursor-pointer hover:text-white">10</span>
          <span class="hover:text-white cursor-pointer">&gt;</span>
        </div>

        <!-- Input Field with UI Icon -->
        <div class="relative flex items-center gap-4 -mr-8">
          <div
            class="w-16 h-16 rounded-[8px] bg-white flex items-center justify-center shadow-2xl border-white"
          >
            <span class="text-2xl font-black text-black">UI</span>
          </div>
          <div
            class="bg-black/40 backdrop-blur-xl border border-white/10 pl-5 pr-3 py-3 w-56 flex justify-between items-center rounded-[10px] shadow-2xl group"
          >
            <span class="text-white text-sm font-medium">OpenClaw</span>
            <div
              class="w-6 h-6 rounded-full bg-default-200/10 flex items-center justify-center hover:bg-default-200/20 transition-colors cursor-pointer"
            >
              <IconXMark
                className="w-3 h-3 text-default-700 dark:text-default-600"
                aria-hidden="true"
              />
            </div>
          </div>
          <span
            class="absolute -top-6 left-24 text-purple-400 text-[11px] font-mono font-bold uppercase tracking-wider"
            >Input</span
          >
        </div>
      </div>

      <!-- Floating Element 4: Bottom Large Image & Tooltip -->
      <div class="absolute bottom-4 right-16 z-30 animate-float-slow">
        <div class="absolute -top-24 -left-32 flex flex-col items-end">
          <div
            class="bg-gradient-to-r from-purple-500 to-pink-500 text-white text-[13px] font-bold px-5 py-2.5 rounded-full shadow-lg shadow-purple-500/30 whitespace-nowrap mb-2 relative"
          >
            Self-hosted AI assistant
          </div>
          <div
            class="bg-black/50 backdrop-blur-md text-default-700 dark:text-default-600 text-[10px] font-bold px-3 py-1.5 rounded-xl border border-white/10 uppercase tracking-widest"
          >
            Tooltip
          </div>
        </div>

        <div
          class="w-[220px] h-[280px] rounded-[14px] overflow-hidden relative group shadow-2xl border border-white/5"
        >
          <img
            src="https://heroui.com/images/hero-card.webp"
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
            alt="Feature focus"
          />
          <div
            class="absolute inset-x-0 bottom-0 h-1/2 bg-gradient-to-t from-black/80 via-black/40 to-transparent flex flex-col justify-end p-6"
          >
            <div class="flex justify-between items-end gap-2">
              <span class="text-[11px] text-white/70 font-semibold leading-tight"
                >Available soon.</span
              >
              <button
                class="bg-blue-600/90 backdrop-blur-md hover:bg-blue-600 text-white text-[10px] h-7 px-3.5 rounded-full transition-all font-bold shadow-lg shadow-blue-500/20"
                >Notify me</button
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- HeroUI-like feature cards (bottom row) -->
  <div class="mt-14 lg:mt-20">
    <HeroFeatureCards />
  </div>

  <HeroBackground slot="background" />
</Section>

<style>
  .perspective-\[1000px\] {
    perspective: 1000px;
  }

  .animate-float-slow {
    animation: float 8s ease-in-out infinite;
  }
  .animate-float-mid {
    animation: float 7s ease-in-out 1s infinite;
  }
  .animate-float-delayed {
    animation: float 9s ease-in-out 2s infinite;
  }

  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
    100% {
      transform: translateY(0px);
    }
  }
</style>
