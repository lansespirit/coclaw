---
import Section from '../layout/Section.astro';
import FeaturesBackground from './backgrounds/FeaturesBackground.astro';
---

<Section containerClass="space-y-32">
  <!-- Accessibility Section -->
  <div>
    <div class="mb-16 max-w-2xl">
      <h2
        class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-b from-foreground to-foreground/60 mb-6"
      >
        Accessibility <br />
        <span class="text-green-500">out of the box.</span>
      </h2>
      <p class="text-xl text-default-800 dark:text-default-600">
        HeroUI components are built on top of React Aria ensuring exceptional accessibility support
        as a top priority.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      <!-- Feature List -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        {
          [
            'Keyboard navigation',
            'Collision aware',
            'Screen reader support',
            'Managed focus',
            'Alignment control',
            'Typehead support',
          ].map((item) => (
            <div class="group m-pill p-4 flex items-center gap-4 cursor-default">
              <div class="w-8 h-8 rounded-lg bg-content2 flex items-center justify-center group-hover:bg-green-500/20 group-hover:text-green-500 transition-colors">
                <svg
                  class="w-5 h-5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M5 13l4 4L19 7" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
              </div>
              <span class="font-medium text-foreground/80 group-hover:text-foreground transition-colors">
                {item}
              </span>
            </div>
          ))
        }
      </div>

      <!-- Action Visual -->
      <div
        class="relative h-[400px] rounded-3xl bg-gradient-to-br from-[#4ff0b7] to-[#1e9a7e] overflow-hidden flex items-center justify-center shadow-[0_0_100px_-20px_rgba(79,240,183,0.3)]"
      >
        <div class="absolute top-4 right-4 animate-bounce">
          <svg class="w-6 h-6 text-black/50" fill="currentColor" viewBox="0 0 24 24"
            ><path
              d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"
            ></path></svg
          >
        </div>

        <!-- Menu Mockup -->
        <div
          class="relative m-card-glass rounded-xl p-2 w-64 scale-100 hover:scale-105 transition-transform duration-500"
        >
          <div class="px-2 py-1 mb-2">
            <span
              class="text-xs font-semibold text-default-900 dark:text-default-700 uppercase tracking-wider"
              >Actions</span
            >
          </div>
          <div class="space-y-1">
            <div
              class="flex items-center justify-between p-2 rounded-lg hover:bg-content2 cursor-pointer group"
            >
              <div class="flex items-center gap-3">
                <div class="text-default-500 group-hover:text-foreground">
                  <svg
                    class="w-4 h-4"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    ><path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7"></path><path
                      d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg
                  >
                </div>
                <div class="flex flex-col">
                  <span class="text-sm font-medium text-foreground/90">Edit file</span>
                  <span class="text-[10px] text-default-800 dark:text-default-600"
                    >Allows you to edit the file</span
                  >
                </div>
              </div>
              <span class="text-xs text-default-500 border border-divider rounded px-1">⌘E</span>
            </div>

            <div
              class="flex items-center justify-between p-2 rounded-lg hover:bg-red-500/10 cursor-pointer group"
            >
              <div class="flex items-center gap-3">
                <div class="text-red-500">
                  <svg
                    class="w-4 h-4"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    ><path
                      d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                    ></path></svg
                  >
                </div>
                <div class="flex flex-col">
                  <span class="text-sm font-medium text-red-500">Delete file</span>
                  <span class="text-[10px] text-red-500/70">Permanently delete</span>
                </div>
              </div>
              <span class="text-xs text-red-500/50 border border-red-500/20 rounded px-1">⌘D</span>
            </div>
          </div>
        </div>

        <div class="absolute -top-6 left-1/2 -translate-x-1/2">
          <div
            class="px-3 py-1 bg-[#0f392b] text-[#4ff0b7] text-xs font-bold rounded-full border border-[#4ff0b7]/20"
          >
            Actions
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Dark Mode Section -->
  <div>
    <div class="mb-16 max-w-2xl">
      <h2
        class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-b from-foreground to-foreground/60 mb-6"
      >
        Dark mode <br />
        <span class="text-orange-500 animate-pulse">is effortless.</span>
      </h2>
      <p class="text-xl text-default-800 dark:text-default-600">
        HeroUI comes with a fully well-scaled default dark theme that you can apply to your
        application.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Visual (Music Player) -->
      <div
        class="relative h-[400px] rounded-3xl bg-gradient-to-br from-[#ff9a62] to-[#ff5f56] p-8 flex items-center justify-center shadow-[0_0_100px_-20px_rgba(255,95,86,0.3)]"
      >
        <div
          class="w-full max-w-md bg-background/20 backdrop-blur-md rounded-3xl p-6 border border-divider shadow-xl"
        >
          <div class="flex gap-6 mb-6">
            <div class="w-24 h-24 rounded-2xl bg-cyan-500 shadow-lg shrink-0">
              <img
                src="https://images.unsplash.com/photo-1514525253440-b393452e61f3?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8dmFwb3J3YXZlfGVufDB8fDB8fHww"
                class="w-full h-full object-cover rounded-2xl"
              />
            </div>
            <div class="flex flex-col justify-center">
              <h4 class="text-white font-bold text-lg">Daily Mix</h4>
              <p class="text-white/60 text-sm">12 Tracks</p>
              <h5 class="text-white font-semibold mt-1">Frontend Radio</h5>
            </div>
            <div class="ml-auto text-white/50">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                ></path></svg
              >
            </div>
          </div>

          <div class="space-y-2 mb-6">
            <div class="w-full h-1 bg-white/20 rounded-full overflow-hidden">
              <div class="w-1/3 h-full bg-white"></div>
            </div>
            <div class="flex justify-between text-xs text-white/50 font-mono">
              <span>1:23</span>
              <span>4:32</span>
            </div>
          </div>

          <div class="flex justify-center items-center gap-6 text-white">
            <!-- Controls svgs -->
            <svg
              class="w-6 h-6 opacity-60 hover:opacity-100 cursor-pointer"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
              ></path></svg
            >
            <svg
              class="w-8 h-8 opacity-80 hover:opacity-100 cursor-pointer"
              fill="currentColor"
              viewBox="0 0 24 24"><path d="M11 17l-5-5 5-5v10zm7 0l-5-5 5-5v10z"></path></svg
            >
            <div
              class="w-14 h-14 rounded-full bg-white text-orange-500 flex items-center justify-center hover:scale-105 transition-transform cursor-pointer"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"
                ><path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"></path></svg
              >
            </div>
            <svg
              class="w-8 h-8 opacity-80 hover:opacity-100 cursor-pointer"
              fill="currentColor"
              viewBox="0 0 24 24"><path d="M13 17l5-5-5-5v10zM6 17l5-5-5-5v10z"></path></svg
            >
            <svg
              class="w-6 h-6 opacity-60 hover:opacity-100 cursor-pointer"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path></svg
            >
          </div>
        </div>
      </div>

      <!-- Code Block -->
      <div
        class="relative h-[400px] rounded-3xl bg-[#111] border border-white/5 overflow-hidden flex flex-col"
      >
        <div
          class="flex items-center justify-between px-6 py-4 border-b border-white/5 bg-[#161618]"
        >
          <div class="flex gap-2">
            <div class="w-3 h-3 rounded-full bg-red-500/20"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500/20"></div>
            <div class="w-3 h-3 rounded-full bg-green-500/20"></div>
          </div>
          <span class="text-xs text-zinc-500">_app.tsx</span>
        </div>
        <!--
          In light mode the page text color is dark, but this code block uses a fixed dark background.
          Any unwrapped characters (e.g. = ; () <> , etc.) inherit the page color and become invisible.
          Set an explicit base text color so symbols remain readable in both themes.
        -->
        <div class="p-6 font-mono text-sm leading-relaxed overflow-auto text-zinc-200">
          <span class="text-purple-400">import</span>
          <span class="text-white">React</span>
          <span class="text-purple-400">from</span>
          <span class="text-green-400">"react"</span>;<br />
          <span class="text-purple-400">import</span>
          <span class="text-yellow-400">{'{HeroUIProvider}'}</span>
          <span class="text-purple-400">from</span>
          <span class="text-green-400">"@heroui/react"</span>;<br /><br />
          <span class="text-purple-400">const</span>
          <span class="text-blue-400">Application</span> = <span class="text-yellow-400"
            >({'{'}Component, pageProps{'}'})</span
          >
          <span class="text-purple-400">=&gt;</span>
          {'{'}<br />
          &nbsp;&nbsp;<span class="text-purple-400">return</span> (<br />
          &nbsp;&nbsp;&nbsp;&nbsp;&lt;<span class="text-yellow-400">HeroUIProvider</span>&gt;<br />
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;<span class="text-red-400">main</span>
          <span class="text-blue-400">className</span>=<span class="text-blue-400"
            >{'{isDark ? '}</span
          ><span class="text-green-400">"dark"</span><span class="text-blue-400">{' : '}</span><span
            class="text-green-400">"light"</span
          ><span class="text-blue-400">{'}'}</span>&gt;<br />
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;<span class="text-yellow-400"
            >Component</span
          >
          {'{...pageProps}'} /&gt;<br />
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;/<span class="text-red-400">main</span>&gt;<br />
          &nbsp;&nbsp;&nbsp;&nbsp;&lt;/<span class="text-yellow-400">HeroUIProvider</span>&gt;<br />
          &nbsp;&nbsp;);<br />
          {'}'};
        </div>
      </div>
    </div>
  </div>

  <FeaturesBackground slot="background" />
</Section>
