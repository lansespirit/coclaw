---
interface Props {
  message?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  message = 'Get started with OpenClaw: guides, troubleshooting, and a config generator',
  ctaText = 'Config Generator â†’',
  ctaHref = '/openclaw-config-generator',
} = Astro.props;
---

<div
  class="relative w-full overflow-hidden border-b border-divider bg-background/60 backdrop-blur-xl backdrop-saturate-150"
>
  <!-- Subtle topbar gradient wash -->
  <div
    class="pointer-events-none absolute inset-0 z-0 bg-gradient-to-r from-secondary/10 via-transparent to-primary/10"
  >
  </div>

  <div class="site-container-wide relative z-10 py-2">
    <div class="flex items-center justify-center gap-3 text-sm">
      <span class="text-default-600 dark:text-default-400">
        <span class="mr-2" aria-hidden="true">ðŸš€</span>
        <span
          class="bg-clip-text text-transparent bg-gradient-to-r from-secondary-600 via-accent-500 to-primary-500 dark:from-secondary-300 dark:via-accent-300 dark:to-primary-300"
        >
          {message}
        </span>
      </span>

      <!-- Glowing gradient border CTA -->
      <a
        href={ctaHref}
        class="group relative isolate inline-flex rounded-full p-px bg-gradient-to-r from-secondary/80 via-accent/80 to-primary/70 before:content-[''] before:absolute before:inset-0 before:rounded-full before:bg-gradient-to-r before:from-secondary/60 before:via-accent/60 before:to-primary/50 before:blur-md before:opacity-60 before:-z-10 group-hover:before:opacity-90 group-hover:before:blur-lg transition-[filter,opacity] shadow-lg shadow-accent/30"
      >
        <span
          class="relative inline-flex items-center gap-2 rounded-full bg-background/60 px-4 py-1.5 text-foreground/90 hover:text-foreground backdrop-blur-xl transition-colors ring-1 ring-inset ring-divider"
        >
          {ctaText}
        </span>
      </a>
    </div>
  </div>
</div>
