---
export type RelatedLinkItem = {
  href: string;
  title: string;
  description?: string;
  badge?: string;
};

interface Props {
  title?: string;
  items: RelatedLinkItem[];
}

const { title = 'Related', items } = Astro.props;
---

{
  items?.length ? (
    <section class="mt-12 border-t border-divider pt-8">
      <h3 class="text-xl font-black mb-4">{title}</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        {items.map((it) => (
          <a
            href={it.href}
            class="block p-4 rounded-2xl bg-content1 border border-divider hover:bg-content2 transition-colors"
          >
            <div class="flex items-start justify-between gap-3">
              <div class="font-bold">{it.title}</div>
              {it.badge ? (
                <span class="text-xs font-semibold px-2 py-0.5 rounded-full bg-primary/10 text-primary-700 dark:text-primary-300 border border-primary/20">
                  {it.badge}
                </span>
              ) : null}
            </div>
            {it.description ? (
              <div class="mt-1 text-sm text-default-600 line-clamp-2">{it.description}</div>
            ) : null}
          </a>
        ))}
      </div>
    </section>
  ) : null
}
